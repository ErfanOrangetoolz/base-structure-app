{
  "name": "my-pharmacy",
  "version": "0.0.1",
  "private": true,
   "homepage": "https://ErfanOrangetoolz.github.io/base-structure-app",
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.5",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.0",
    "gh-pages": "^5.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.11.2",
    "react-scripts": "5.0.1",
    "redux-saga": "^1.2.3"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/preset-react": "^7.18.6",
    "@types/react": "^18.2.11",
    "@types/react-dom": "^18.2.4",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.1",
    "file-loader": "^6.2.0",
    "json-server": "^0.17.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.3",
    "pretty-quick": "^3.1.3",
    "react-error-overlay": "^6.0.9",
    "redux-logger": "^3.0.6",
    "sass": "^1.55.0",
    "typescript": "^5.1.3",
    "url-loader": "^4.1.1"
  },
  "scripts": {
    "start": "PORT=7011 react-scripts start",
    "build": "react-scripts build",
    "lint": "npx eslint \"src/**/*{.js,.jsx}\"",
    "lint:fix": "npx eslint \"src/**/*{.js,.jsx}\" --fix",
    "format": "prettier --check --ignore-path .gitignore .",
    "format:fix": "npx prettier --write . \"!**/*.{.json}\" --ignore-path .gitignore .",
    "server": "",
    "typecheck": "tsc",
    "json-server": "json-server --watch ./src/redux/database/database.js --routes ./src/redux/database/json-server/routes.json --port 3000",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{jsx,js}": "eslint --cache --fix",
    "*.{js,jsx,scss,css}": "npx prettier --write . \"!**/*.{.json}\" --ignore-path .gitignore ."
  }
}
