{
  "name": "my-pharmacy",
  "version": "0.0.1",
  "private": true,
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.11.2",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/preset-react": "^7.18.6",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.1",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.3",
    "pretty-quick": "^3.1.3",
    "react-error-overlay": "^6.0.9",
    "sass": "^1.55.0"
  },
  "scripts": {
    "start": "PORT=7011 react-scripts start",
    "build": "react-scripts build",
    "lint": "npx eslint \"src/**/*{.js,.jsx}\"",
    "lint:fix": "npx eslint \"src/**/*{.js,.jsx}\" --fix",
    "format": "prettier --check --ignore-path .gitignore .",
    "format:fix": "npx prettier --write . \"!**/*.{.json}\" --ignore-path .gitignore ."
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{jsx,js}": "eslint --cache --fix",
    "*.{js,jsx,scss,css}": "npx prettier --write . \"!**/*.{.json}\" --ignore-path .gitignore ."
  }
}
